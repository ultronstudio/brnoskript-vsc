{
  "name": "brnoskript-vsc",
  "displayName": "Podpora pro BrnoSkript",
  "description": "Zvýraznění syntaxe, úryvky kódu a konfigurace jazyka pro BrnoSkript ve Visual Studio Code.",
  "author": {
    "name": "Petr Vurm",
    "url": "https://petrvurm.cz"
  },
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onLanguage:brnoskript"
  ],
  "scripts": {
    "package": "vsce package"
  },
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "brnoskript",
        "aliases": [
          "BrnoSkript",
          "brnoskript",
          "brno",
          "Brno"
        ],
        "extensions": [
          ".brno"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "icons/brno.svg",
          "light": "icons/brno.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "brnoskript",
        "scopeName": "source.brnoskript",
        "path": "./syntaxes/brnoskript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "brnoskript",
        "path": "./snippets/brnoskript.code-snippets"
      }
    ]
  },
  "dependencies": {
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ultronstudio/brnoskript-vsc"
  }
}
